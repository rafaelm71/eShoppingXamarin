<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eShoppingXamarin.Views.LogInPage"
             BackgroundColor="White">
    <ScrollView>
        <StackLayout 
            VerticalOptions="Center" 
            Padding="20"
            >
            <Image 
                Source="shoppingcart.jpg" 
                WidthRequest="150"
                HeightRequest="150"
             />
            <Label/>
            <Entry 
                x:Name="emailEntry"
                Placeholder="Email" 
             />
            <Entry 
                x:Name="passwordEntry"
                Placeholder="Password" 
                IsPassword="True"
             />
            <Button 
                Text="Login" 
                TextColor="Black"  
                BackgroundColor="LightGray" 
                Clicked="ButtonClicked1" 
                FontSize="18"
             />
            <!--<Label 
                Text="No tienes cuenta?"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                FontSize="18"
            />-->
            <Button
                Text="Register"
                TextColor="Black"
                BackgroundColor="LightGray"
                Clicked="ButtonClicked"
                FontSize="18"
                />
        </StackLayout>
    </ScrollView>
</ContentPage>